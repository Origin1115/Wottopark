<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="80dp"
    android:orientation="horizontal"
    android:background="@drawable/my_border"
    android:layout_margin="3dp"
    android:weightSum="100"
    android:padding="10dp">

    <ImageButton
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:id="@+id/img_vehicleid"
        android:background="@drawable/pencil"
        android:layout_gravity="center_vertical"
        />
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal"
        android:layout_margin="3dp"
        android:layout_weight="90"
        android:weightSum="90">
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_weight="40"
            android:weightSum="20"
            android:layout_margin="5dp"
            android:orientation="vertical"
            tools:ignore="NestedWeights">
            <TextView
                android:id="@+id/txtPlatenumber"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="10"
                android:textSize="18dp"
                android:textColor="@color/black"
                android:text="PlateNumber" />

            <TextView
                android:id="@+id/txtInputtime"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="10"
                android:textSize="18dp"

                android:text="InputTime" />
        </LinearLayout>
        <TextView
            android:id="@+id/txtTicketnumber"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="25"
            android:layout_gravity="center_vertical"
            android:textColor="@color/black"
            android:textSize="18dp"

            android:text="TicketNumber" />
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_weight="25"
            android:weightSum="20"
            android:layout_margin="5dp"
            android:orientation="vertical">
            <TextView
                android:id="@+id/txtParkedtime"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="10"
                android:textSize="18dp"

                android:text="ParkedTime" />

            <TextView
                android:id="@+id/txtTotalprice"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="10"
                android:textSize="18dp"

                android:text="TotalPrice" />
        </LinearLayout>

    </LinearLayout>




</LinearLayout>